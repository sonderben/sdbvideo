<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.me.MeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginRight="@dimen/_5sdp"
        app:layout_goneMarginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_44sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/info_edit_profile"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/info"
        android:text="Press profile for edit"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:dividerHeight="@dimen/_15sdp"
        android:divider="@android:color/transparent"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/info_edit_profile"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/listview"
        android:text="Version: 1.0.1.213"/>




</androidx.constraintlayout.widget.ConstraintLayout>