<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_foto"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/profile_nam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/profile_foto"
        app:layout_constraintLeft_toLeftOf="@+id/profile_foto"
        app:layout_constraintRight_toRightOf="@+id/profile_foto"/>
    <View
        android:layout_width="@dimen/_5sdp"
        app:layout_constraintLeft_toRightOf="@+id/profile_foto"
        app:layout_constraintTop_toTopOf="@+id/profile_foto"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>