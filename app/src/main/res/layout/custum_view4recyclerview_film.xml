<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/film_foto"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_220sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/film_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="@dimen/_16sdp"
        android:text="Drame"
        android:textColor="@color/white"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/film_foto"
        app:layout_constraintLeft_toLeftOf="@+id/film_foto"
        app:layout_constraintRight_toRightOf="@+id/film_foto"/>
    <TextView
        android:id="@+id/film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="@dimen/_16sdp"
        android:text="La Tragedie de Macbeth"
        android:textColor="@color/white"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/film_name"
        app:layout_constraintLeft_toLeftOf="@+id/film_foto"
        app:layout_constraintRight_toRightOf="@+id/film_foto"/>
    <TextView
        android:id="@+id/film_synopsis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="@dimen/_16sdp"
        android:text="La Tragedie de Macbeth"
        android:textColor="@color/white"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@+id/film_title"
        app:layout_constraintLeft_toLeftOf="@+id/film_foto"
        app:layout_constraintRight_toRightOf="@+id/film_foto"/>



    <View
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="@+id/film_foto"
        app:layout_constraintLeft_toRightOf="@+id/film_foto"/>
    <View
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/film_foto"
        app:layout_constraintLeft_toLeftOf="@+id/film_foto"/>
</androidx.constraintlayout.widget.ConstraintLayout>