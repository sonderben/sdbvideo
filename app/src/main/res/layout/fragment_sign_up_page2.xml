<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_app"
    tools:context=".ui.sign_up.SignUpPage2Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:textColor="@color/light_blue_600"
                android:minHeight="@dimen/_36sdp"
                android:text="Ben"
                android:drawableTint="#A8A4A4"
                android:paddingLeft="@dimen/_5sdp"
                android:selectAllOnFocus="true"
                android:background="@drawable/bg_et"
                android:textSize="@dimen/_18sdp"
                android:textColorHint="#A8A4A4"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ic_user_24"
                android:hint="@string/prompt_first_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFCC00"
                android:visibility="invisible"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="No valid"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:textColor="@color/light_blue_600"
                android:minHeight="@dimen/_36sdp"
                android:text="Der"
                android:drawableTint="#A8A4A4"
                android:paddingLeft="@dimen/_5sdp"
                android:selectAllOnFocus="true"
                android:background="@drawable/bg_et"
                android:textSize="@dimen/_18sdp"
                android:textColorHint="#A8A4A4"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ic_user_24"
                android:hint="@string/prompt_last_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFCC00"
                android:visibility="invisible"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="No valid email"/>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>